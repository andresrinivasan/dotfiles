[credential]
        helper = store
[commit]
	##gpgsign = true
[pull]
	rebase = true
[pretty]
	simple = format:%Cred%h%Creset:%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[format]
	pretty = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autoStash = true

# Enforce SSH, most of the time

## For Homebrew, I want to use HTTPS so I can automate updates and still use an SSH key agent for everything else. 
## I could figure out how to use the shorter version this pattern elsewhere and ended up testing via git remote -v
## until I was convinced I was always going map to HTTPS.
[url "https://github.com/Homebrew"]
  insteadOf = git@github.com:Homebrew
  insteadOf = https://github.com/Homebrew

[url "git@github.com:"]
  insteadOf = https://github.com/
[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/
[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org

