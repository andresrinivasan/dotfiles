#!/usr/bin/env sh

export PREFIX=andre

gcloud compute instances list --format=json | jq "$@" '[ 
  .[] | select(.name | test("^" + env.PREFIX)) | .shortZone = (.zone | split("/"))[-1] 
  | {name} + {"zone": .shortZone} 
  + (.networkInterfaces[] | (.accessConfigs[] | {natIP}) + {"internal-ip": .networkIP}) 
  + {status} 
  + {"start": ("gcloud compute instances start --async " + .name + " --zone=" + .shortZone) }
  + {"stop": ("gcloud compute instances stop --async " + .name + " --zone=" + .shortZone) }
]'
